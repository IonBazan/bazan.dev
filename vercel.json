{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "public",
  "buildCommand": "./build.sh",
  "env": {
    "HUGO_VERSION": "0.154.5",
    "DART_SASS_VERSION": "1.97.2"
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/index.txt",
      "statusCode": 307,
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(curl|wget|HTTPie|Postman).*"
        }
      ]
    }
  ]
}
